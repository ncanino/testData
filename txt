<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"	
	xmlns:jee="http://www.springframework.org/schema/jee"
	xsi:schemaLocation="
				http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd				
				http://www.springframework.org/schema/jee http://www.springframework.org/schema/jee/spring-jee-3.0.xsd">	



	<bean id="SMSAlert.sessionFactory" lazy-init="false" class="org.springframework.orm.hibernate3.LocalSessionFactoryBean">
		<property name="dataSource" ref="SMSAlert.dataSource" />
		<property name="mappingResources">
			<list>
				<value>ents.hbm.xml</value>
				<value>lLog.hbm.xml</value>								
			</list>
		</property>
		<property name="hibernateProperties">
			<props>
				<prop key="hibernate.dialect">org.hibernate.dialect.Oracle10gDialect</prop>
				<prop key="hibernate.show_sql">false</prop> 	
			</props>
		</property>
	</bean>	


	<bean id="SMSAlert.hibernateTemplate" class="org.springframework.orm.hibernate3.HibernateTemplate">
		<property name="sessionFactory" ref="SMSAlert.sessionFactory"/>
	</bean>

	<bean id="SMSAlert.jdfDaoTemplate" lazy-init="true" abstract="true">
		<property name="hibernateTemplate">
			<ref bean="SMSAlert.hibernateTemplate" />
		</property>	
		 
		<property name="jdfErrorHandler">
			<ref bean="SMSAlert.jdfErrorHandler"/>
		</property>			
    </bean>

	<!-- Dao Components -->
	<bean id="SMSAlert.loggingDao" lazy-init="false" 
		class="com.business.dao.impl.LoggingDaoImpl" parent="SMSAlert.jdfDaoTemplate">
	</bean>	
	
	<bean id="SMSAlert.eventsDao" lazy-init="false" 
		class="com.business.dao.impl.EventsDaoImpl" parent="SMSAlert.jdfDaoTemplate">
		
	</bean>	
	
	<bean id="SMSAlert.templateDao" lazy-init="false" 
		class="com.business.dao.impl.TemplatingDaoImpl" parent="SMSAlert.jdfDaoTemplate">
		<property name="hibernateTemplate" ref="SMSAlert.hibernateTemplate" />
	</bean>	
	
</beans>

